@model IEnumerable<KinderStore.Domain.Entities.Product>

@{
    ViewBag.Title = "Панель администратора: список товаров";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <h3>Список товаров</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-center">ID</th>

                <th>Категория</th>
                <th class="text-center">Наименование</th>
                <th class="text-center">Артикул</th>
                <th class="text-center">Размеры</th>
                <th class="text-center">Материал</th>
                <th class="text-center">Описание</th>
                <th class="text-center">Цена, бел.руб.</th>
                <th class="text-center"></th>
                <th class="text-center">Наличие</th>
                <th class="text-center"></th>
                <th class="text-center">Последнее изменение</th>
                <th class="text-center">Создано</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">@item.ProductId</td>

                    <td class="text-left">@item.Category</td>
                    <td>@Html.ActionLink(item.Name, "Edit", new { item.ProductId })</td>

                    <td class="text-right">@item.Code</td>
                    <td class="text-right">@item.Size</td>
                    <td class="text-left">@item.Material</td>
                    <td class="text-left">@item.Description</td>
                    <td class="text-right">@item.Price</td>
                    <td class="text-center">
                        @if (item.ImageData != null)
                        {
                            <img class="img-thumbnail" width="75" height="75" src="@Url.Action("GetImage", "Product", new {item.ProductId})"/>
                        }
                        else
                        {
                            <img class="img-thumbnail" width="50" height="50" src="~/Images/no_image.jpg" />
                        }
                    </td>
                    <!--<td class="text-right">@item.IsAvailable</td>-->
                    <td class="text-center">@Html.DisplayFor(modelItem => item.IsAvailable)</td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("ProductId", item.ProductId)
                            <input type="submit"
                                   class="btn btn-default btn-xs"
                                   onclick="return confirm('Вы уверены что хотите удалить @item.Name артикул @item.Code ?')"
                                   value="Удалить"/>
                        }
                    </td>
                    <td class="text-right">@item.LastModified</td>
                    <td class="text-right">@item.Created</td>
                </tr>}
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("Добавить товар", "Create", null,
            new { @class = "btn btn-default" })
    </div>
</div>