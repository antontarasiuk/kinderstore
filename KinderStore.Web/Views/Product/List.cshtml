@using KinderStore.Web.Models
@model ProductListViewModel

@{
    ViewBag.Title = "Товары";
}

<h2>List</h2>

@foreach (var p in @Model.Products)
{
    <div>
        <h3>@p.Name</h3>
        <h3>@p.Code</h3>
        <h3>@p.Size</h3>
        <h3>@p.Material</h3>
        <h3>@p.Category</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("# бел\\.руб\\.")</h4>
        <img src="~/Images/@p.Image" alt="Sample Photo" />
    </div>
}

<div>
    @Html.PageLinks(Model.PagingInfo, x => Url.Action("List", new { page = x }))
</div>