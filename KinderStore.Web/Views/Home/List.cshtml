@using KinderStore.Domain.Entities
@model IEnumerable<Product>

@{
    ViewBag.Title = "Товары";
}

<h2>List</h2>

@foreach (var p in @Model)
{
    <div>
        <h3>@p.Name</h3>
        <h3>@p.Category</h3>
        <p>@p.Description</p>
        <h4>@p.Price.ToString("# бел\\.руб\\.")</h4>
    </div>
}